	<h2>Artists</h2>

<ul>
	<% @artists.each do |artist| %>
	<li>
		<ul>
			<li><%= image_tag artist.image, :class => 'thumb' %></li>
			<li>Name: <%= link_to artist.name, artist %></li>
			<!-- cn say artist_path, artist_path(artist.id) or just artist -->
			<li>Nationality: <%= artist.nationality %></li>
			<li>Date of birth: <%= artist.dob.strftime "%A, %e %B %Y" if artist.dob %></li>
			<li>Period: <%= artist.period %></li>
		</ul>
	</li>
	<% end %>
</ul>	